{
    "name": "lexusalex/starter",
    "type": "project",
    "license": "MIT",
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "files": [
            "src/Configuration/env.php"
        ],
        "psr-4": {
            "Starter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Alexsey Shmelev",
            "email": "alexsey_89@bk.ru"
        }
    ],
    "require": {
        "php": ">= 8.1.0",
        "ext-pdo": "*",
        "doctrine/orm": "^2.11",
        "laminas/laminas-config-aggregator": "^1.7",
        "symfony/cache": "^6.0",
        "symfony/mailer": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-components": "phpunit --colors=always --testsuite components"
    }
}
